@{
    ViewData["Title"] = "Administration";
}
<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>
<div class="row">
    <div class="col-lg-8">
        <form id="signInForm" action="Home/AuthenticateAdmin" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Email Address</label>
                <input required type="email" class="form-control" id="emailAddress" aria-describedby="emailHelp" placeholder="john.doe@gmail.com">
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Password</label>
                <input required type="password" class="form-control" id="password" placeholder="********">
            </div>
            <button type="submit" class="btn btn-outline-secondary" onsubmit="submitSignInForm">Submit</button>
        </form>
    </div>
</div>
@section scripts{
    <script language="javascript" type="text/javascript">
        //Submit Sign in form.
        $(document).ready(function () {
            $("#signInForm").submit(function () {
                var email = $("#emailAddress").serialize();
                var password = $("#password").serialize();
                $.ajax({
                    type: "POST",
                    url: "AuthenticateAdmin",
                    data: {
                        email: email,
                        password: password
                    },
                    success: function (result) {
                        alert('Signing in');
                    },
                    error: function (result) {
                        alert('Invalid request ' + result.statusText);
                    }
                });
            });
        });
    </script>
}

